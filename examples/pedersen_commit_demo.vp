attacker[passive]

principal Alice[
    knows private v
    knows private r
    Commit = PedersenCommit(v, r)
    Cancel = PedersenCommit(v, r) + PedersenCommit(-v, -r)
    DoubleCancel = Cancel + PedersenCommit(v, r) + PedersenCommit(-v, -r)
]

queries[
    equivalence? Cancel, 0
    equivalence? DoubleCancel, 0
    secrecy? v
]
