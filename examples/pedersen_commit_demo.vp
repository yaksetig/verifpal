attacker[passive]

principal Alice[
    knows private v
    knows private r
    Commit = PedersenCommit(v, r)
    Cancel = GROUPADD(Commit, Neg(Commit))
    DoubleCancel = GROUPADD(Cancel, GROUPADD(Commit, Neg(Commit)))
]

queries[
    equivalence? Cancel, 0
    equivalence? DoubleCancel, 0
    confidentiality? v
]
